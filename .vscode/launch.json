{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "pythonPath": "${config:python.pythonPath}",
      "program": "${workspaceRoot}/debug.py",
      "env": {
        "FLASK_APP": "${workspaceRoot}/app/__init__.py"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "debugOptions": [
        "WaitOnAbnormalExit",
        "WaitOnNormalExit",
        "RedirectOutput"
      ]
    }
  ]
}